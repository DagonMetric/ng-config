{
  "$schema": "./node_modules/@dagonmetric/angular-build/src/schemas/schema.json#",
  "libs": [
    {
      "extends": "ngb:lib-default",
      "name": "ng-config",
      "root": "modules/ng-config",
      "outputPath": "dist/packages/ng-config",
      "libraryName": "ngConfig",
      "envOverrides": {
        "prod": {
          "copy": [
            "../../README.md",
            "../../LICENSE"
          ],
          "bundles": true,
          "packageJsonCopy": true,
          "banner": "../banner.txt"
        }
      }
    },
    {
      "extends": "ngb:lib-default",
      "name": "ng-config-http-config",
      "root": "modules/ng-config/http-config",
      "outputPath": "dist/packages/ng-config",
      "libraryName": "ngConfig.httpConfig",
      "externals": {
        "@dagonmetric/ng-config": "ngConfig"
      },
      "envOverrides": {
        "prod": {
          "copy": [],
          "bundles": true,
          "packageJsonCopy": true
        }
      }
    },
    {
      "name": "firebase-demo-functions",
      "root": "samples/firebase-functions",
      "outputPath": "dist/functions",
      "tsTranspilations": [{
        "tsConfig": "tsconfig.build.json"
      }],
      "bundles": false,
      "skip": true,
      "envOverrides": {
        "prod": {
          "skip": false,
          "copy": [
            {
              "from": "../../firebase.json",
              "to": "../firebase.json"

            },
            "package.json"
          ]
        }
      }
    }
  ]
}
