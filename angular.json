{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "modules",
  "projects": {
    "ng-config": {
      "root": "modules/ng-config",
      "sourceRoot": "modules/ng-config",
      "projectType": "library",
      "architect": {
        "build": {
          "builder": "@dagonmetric/angular-build:lib",
          "options": {
            "extends": "file:angular-build.json:lib:ng-config",
            "outputPath": "dist/packages/ng-config"
          },
          "configurations": {
            "production": {
              "environment": "prod"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "modules/ng-config/test.ts",
            "tsConfig": "modules/ng-config/tsconfig-test.json",
            "karmaConfig": "modules/ng-config/karma.conf.js",
            "codeCoverageExclude": [
              "**/test.ts",
              "**/index.ts",
              "**/public_api.ts"
            ]
          },
          "configurations": {
            "ci": {
              "browsers": "ChromeHeadlessCI",
              "reporters": ["progress", "junit"],
              "codeCoverage": true,
              "watch": false,
              "progress": false
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "ng-config-http-config-provider": {
      "root": "modules/ng-config/http-config-provider",
      "sourceRoot": "modules/ng-config/http-config-provider/src",
      "projectType": "library",
      "architect": {
        "build": {
          "builder": "@dagonmetric/angular-build:lib",
          "options": {
            "extends": "file:angular-build.json:lib:ng-config-http-config-provider",
            "outputPath": "dist/packages/ng-config"
          },
          "configurations": {
            "production": {
              "environment": "prod"
            }
          }
        }
      }
    },
    "demo-app": {
      "projectType": "application",
      "schematics": {},
      "root": "samples/demo-app",
      "sourceRoot": "samples/demo-app/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/demo-app",
            "index": "samples/demo-app/src/index.html",
            "main": "samples/demo-app/src/main.ts",
            "polyfills": "samples/demo-app/src/polyfills.ts",
            "tsConfig": "samples/demo-app/tsconfig.app.json",
            "aot": true,
            "assets": [
              "samples/demo-app/src/favicon.ico",
              "samples/demo-app/src/assets"
            ],
            "styles": [],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "samples/demo-app/src/environments/environment.ts",
                  "with": "samples/demo-app/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "demo-app:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "demo-app:build:production"
            }
          }
        }
      }
    }
  },
  "defaultProject": "demo-app"
}
